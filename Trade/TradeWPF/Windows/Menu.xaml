<Window x:Class="TradeWPF.Windows.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TradeWPF.Windows"
        mc:Ignorable="d"
        Title="Menu" Height="700" Width="1600" FontFamily="Comic Sans MS" Loaded="Menu_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" Margin="10,20,10,0">
            <TextBlock FontSize="20" TextAlignment="Center" TextWrapping="Wrap" Name="FIOTextBlock">ФИО</TextBlock>
            <Button Margin="5" Click="Button_Click">Выход</Button>
        </StackPanel>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
